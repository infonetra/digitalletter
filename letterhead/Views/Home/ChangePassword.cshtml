@model letterhead.Models.Mst_USER
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="row">

        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Change Password</h5>
                    <!-- Custom Styled Validation -->
                    @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "row g-3 needs-validation", @novalidate = "novalidate" }))
                    {
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">EMPCODE<span style="color:red;">*</span></label>
                            @Html.TextBoxFor(x => x.EMPCODE, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Password<span style="color:red;">*</span></label>
                            @Html.TextBoxFor(x => x.USERPWD, new { @class = "form-control", placeholder = "Remark", @required = "required" })
                        </div>
                        @Html.HiddenFor(a=>a.ID)
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Update</button>
                            <a class="btn btn-danger" href="@Url.Action("Dashboard","Home")">Cancel</a>
                        </div>
                    }
                    <!-- End Custom Styled Validation -->

                </div>
            </div>

        </div>
    </div>
</section>


