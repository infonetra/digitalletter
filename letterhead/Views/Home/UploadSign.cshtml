@model letterhead.Models.USERSIGN
@{
    ViewBag.Title = "UploadSign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Upload Sign</h5>
                    <!-- Custom Styled Validation -->
                    @using (Html.BeginForm("UploadSign", "Home", FormMethod.Post, new { enctype = "multipart/form-data", }))
                    {
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Name <span style="color:red;">*</span></label>
                            @Html.TextBoxFor(x => x.SIGNTITLE, new { @class = "form-control", placeholder = "Enter Title", @required = "required" })
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Upload Sign <span style="color:red;">*</span></label>
                            <input class="form-control" type="file" id="imgProfileC" name="imgProfileC" required="required">
                        </div>
                        <div class="col-md-4">
                            <label for="validationDefault04" class="form-label">Status <span style="color:red;">*</span></label>
                            @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>
                        {
                           new SelectListItem{Text="Active",Value="true",Selected=true},
                           new SelectListItem{Text="DeActive",Value="false"}
                        }, new { @id = "IsActive", @class = "form-select", @required = "required" })
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <a class="btn btn-danger" href="@Url.Action("Dashboard","Home")">Cancel</a>
                        </div>
                    }
                    <!-- End Custom Styled Validation -->

                </div>
            </div>

        </div>
    </div>
</section>



