@model letterhead.Models.Mst_USER
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="row">

        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User  Master </h5>
                    <!-- Custom Styled Validation -->
                    @using (Html.BeginForm("EditUser", "Home", FormMethod.Post, new { @class = "row g-3 needs-validation", @novalidate = "novalidate" }))
                    {
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Full Name <span style="color:red;">*</span></label>
                            @Html.TextBoxFor(x => x.FULLNAME, new { @class = "form-control", placeholder = "Enter Title", @required = "required" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Project-Authorized <span style="color:red;">*</span></label>
                            @Html.DropDownListFor(x => x.SITEID, ViewBag.SITE as List<SelectListItem>, "Select Site", new { @class = "form-control select2 UserType" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Department<span style="color:red;">*</span></label>
                            @Html.DropDownListFor(x => x.DEPTID, ViewBag.dept as List<SelectListItem>, "Select Department", new { @class = "form-control select2 UserType" })
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">EMP Code <span style="color:red;">*</span></label>
                            @Html.TextBoxFor(x => x.EMPCODE, new { @class = "form-control", placeholder = "Enter EMP Code", @required = "required" })
                        </div>
                        @*<div class="col-md-4">
                <label for="validationCustom01" class="form-label">User Name <span style="color:red;">*</span></label>
                @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control", placeholder = "Enter User Name", @required = "required" })
            </div>*@
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Password <span style="color:red;">*</span></label>
                            @Html.TextBoxFor(x => x.USERPWD, new { @class = "form-control", placeholder = "Enter Password", @required = "required" })
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Mobile No <span style="color:red;">*</span></label>
                            @Html.TextBoxFor(x => x.MOBILENO, new { @class = "form-control", placeholder = "Enter Mobile No", @required = "required" })
                        </div>
                        @*<div class="col-md-4">
                <label for="validationCustom01" class="form-label">Email <span style="color:red;">*</span></label>
                @Html.TextBoxFor(x => x.EMAILID, new { @class = "form-control", placeholder = "Enter Email", @required = "required" })
            </div>*@
                        @*<div class="col-md-4">
                            <label for="validationDefault04" class="form-label">Can Login <span style="color:red;">*</span></label>
                            @Html.DropDownListFor(x => x.CANLOGIN, new List<SelectListItem>
                        {
                           new SelectListItem{Text="Active",Value="true",Selected=true},
                           new SelectListItem{Text="DeActive",Value="false"}
                        }, new { @id = "IsActive", @class = "form-select", @required = "required" })
                        </div>*@
                        <div class="col-md-4">
                            <label for="validationDefault04" class="form-label">Status <span style="color:red;">*</span></label>
                            @Html.DropDownListFor(x => x.ISACTIVE, new List<SelectListItem>
                        {
                           new SelectListItem{Text="Active",Value="true",Selected=true},
                           new SelectListItem{Text="DeActive",Value="false"}
                        }, new { @id = "IsActive", @class = "form-select", @required = "required" })
                        </div>
                        @Html.HiddenFor(a => a.ID)
                        @Html.HiddenFor(a => a.ROLEID)
                        @Html.HiddenFor(a => a.CREATEBY)
                        @Html.HiddenFor(a => a.CRAETEDATE)
                        @Html.HiddenFor(a => a.OneTimeUser)
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <a class="btn btn-danger" href="@Url.Action("Dashboard","Home")">Cancel</a>
                        </div>
                    }
                    <!-- End Custom Styled Validation -->

                </div>
            </div>

        </div>
    </div>
</section>



