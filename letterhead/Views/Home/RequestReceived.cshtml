@model IEnumerable<letterhead.Models.latterrvm>
@{
    ViewBag.Title = "RequestReceived";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item active">Request Received List</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-12">
            <div class="card recent-sales overflow-auto">
                <div class="filter" style="right:23px;">                                 
                    <a class="btn btn-danger" href="@Url.Action("Dashboard","Home")">Cancel</a>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Request Received</h5>

                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">Site Name</th>                              
                                <th scope="col">Letterhead No</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i = i + 1;
                                <tr>
                                    <th scope="row"><a href="#">@i</a></th>
                                    <td>@item.TITLE</td>                                   
                                    <td>@item.LATTERNOSerice</td>

                                    <td>
                                        @if (item.StatusID != 4)
                                        {
                                            <a class="btn btn-outline-success" href="@Url.Action("Printwithdate", "Home", new {@id=item.ID})">Approve</a>
                                            <span>|</span>
                                            <a class="btn btn-outline-danger" title="View" href="@Url.Action("printview", "Home", new {id=item.ID})">Send Back</a>
                                            <span>| </span>
                                            <a title="Print & Download" href="@Url.Action("performaview", "Home", new {id=@item.ID})"> <i class="bi bi-printer"></i></a>
                                            <span>| </span>
                                            <a title="Log" href="@Url.Action("performaview", "Home", new {id=@item.ID})"> <i class="bi bi-ticket-detailed"></i></a>
                                        }
                                        else
                                        {
                                            <a title="Print & Download" href="@Url.Action("performaview", "Home", new {id=@item.ID})"> <i class="bi bi-printer"></i></a>
                                            <span>| </span>
                                            <a title="Log" href="@Url.Action("performaview", "Home", new {id=@item.ID})"> <i class="bi bi-ticket-detailed"></i></a>
                                        }

                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</section>

<div class="ibox-content" id="Printed" title="Print" style="display:none;">
    <p id="setno"></p>
</div>

@Html.Partial("_Alerts")

