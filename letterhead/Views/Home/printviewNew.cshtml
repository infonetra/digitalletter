@model letterhead.Models.latterrvm
@{
    Layout = null;
    var datet = DateTime.Now.ToString("dd-MM-yyyy");
}

<link rel="stylesheet" href="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/skins/content/default/content.min.css">
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Letter Preview</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .header, .footer {
            text-align: center;
            width: 100%;
        }

            .header img, .footer img {
                width: 100%;
                max-width: 800px;
            }

        .page-headernew {
            padding: 10px 50px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            font-size: 14px;
        }

        .rich-text-output {
            padding: 30px 50px;
            font-size: 14px;
            line-height: 1.6;
            color: #333;
        }
    </style>
</head>
<body>

    <!-- Header Image -->
    <div class="header">
        <img src="~/Content/assets/img/LeaterHeader.png" style="margin-left:7px; margin-top:6px;" />
    </div>

    <!-- Dynamic Number and Date -->
    <div class="page-headernew">
        <span><b>xxxxxxxxxxxx</b></span>
        <span>@(Session["datawise"] != null ? Session["datawise"].ToString() : DateTime.Now.ToString("dd-MM-yyyy"))</span>
    </div>

    <!-- Letter Content -->
    <div class="rich-text-output">
        @Html.Raw(Model.LatterData)
    </div>

    <!-- Footer Image -->
    <div class="footer">
        <img src="~/Content/assets/img/LetterFooter.png" style="margin-left:7px;margin-top:5px;" />
    </div>
    <script>

        window.print();
        window.onafterprint = function (event) {
            var url = '@Url.Action("LetterRequest", "Home", new { id = Model.ID })';
           window.location.href = url;
        };
    </script>
</body>
</html>

