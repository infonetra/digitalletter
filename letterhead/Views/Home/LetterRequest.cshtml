@model IEnumerable<letterhead.Models.latterrvm>
@{
    ViewBag.Title = "LetterRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item active">Letterhead List</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-12">
            <div class="card recent-sales overflow-auto">
                <div class="filter" style="right:23px;">
                    @*<button type="button" class="btn btn-primary"><i class="bi bi-star me-1"></i> With Text</button>*@
                    <a class="btn btn-primary" href="@Url.Action("AddLetterRequest", "Home")"><i class="bi bi-person-plus"></i>Create Letterhead</a>
                    <a class="btn btn-danger" href="@Url.Action("Dashboard","Home")">Cancel</a>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Letter Create</h5>

                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">Site Name</th>
                                <th scope="col">Remark</th>                               
                                <th scope="col">Letterhead No</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i = i + 1;
                                <tr>
                                    <th scope="row"><a href="#">@i</a></th>
                                    <td>@item.TITLE</td>
                                    <td>@item.REMARK</td>
                                    <td>@item.LATTERNOSerice</td>

                                    <td>
                                        @if (item.StatusID == 5 || item.StatusID == 3)
                                        {
                                            <a href="@Url.Action("Printwithdate", "Home", new {@id=item.ID})">specific date</a>
                                            <span>|</span>
                                            @*<a title="View" href="@Url.Action("printview", "Home", new {id=item.ID})"><i class="bi bi-eye-fill"></i></a>
                                            <span>|</span>*@
                                            <a title="Edit" href="@Url.Action("Performa", "Home", new {id=@item.ID})"><i class="bi bi-pencil"></i></a>
                                            <span>| </span>
                                            <a title="Print & Download" href="@Url.Action("performaview", "Home", new {id=@item.ID})"> <i class="bi bi-printer"></i></a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Printwithdate", "Home", new {@id=item.ID})">specific date</a>
                                            <span>|</span>
                                            @*<a title="View" href="@Url.Action("printview", "Home", new {id=item.ID})"><i class="bi bi-eye-fill"></i></a>                                           
                                            <span>| </span>*@
                                            <a title="Print & Download" href="@Url.Action("performaview", "Home", new {id=@item.ID})"> <i class="bi bi-printer"></i></a>
                                        }
                                    </td>

                                    </tr>
                            }

                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</section>

<div class="ibox-content" id="Printed" title="Print" style="display:none;">
    <p id="setno"></p>
</div>

@Html.Partial("_Alerts")



