
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title-HGIEL</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">
</head>

<body style="background-image: url(/Content/img/banner1.JPG); background-size: cover; background-repeat: no-repeat; background-position: center center;">

    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                
                <div class="container" style="margin-left: 75px; ">
                    <div class="row">
                       
                        <div class="col-lg-8 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="mb-3">

                                <div class="card-body">

                                    <img src="~/Content/assets/img/EL Pad.jpg" width="100%" style="height:181px" />

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center"> 
                            <div style=" margin-top: -100px; text-align:center;">
                                <img src="~/Content/assets/img/logo.png" style="width:80%" />
                            </div>
                            <div class="card mb-3">

                                <div class="card-body" style=" width: 303px; ">

                                    <div class="pt-4 pb-2">
                                        <p class="card-title text-center pb-0 fs-4">Login to Your Account</p>
                                        <p class="text-center small">Enter your username & password to login</p>
                                    </div>
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row g-3 needs-validation", @novalidate = "novalidate" }))
                                    {
                                        <div class="col-12">
                                            <p class="small" style="margin-bottom:0;">Username (EMP-CODE)</p>
                                            <div class="input-group has-validation">
                                                <input type="text" name="username" class="form-control" id="username" required placeholder="Username">
                                                <div class="invalid-feedback">Please enter your username.</div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <p class="small"style="margin-bottom:0;">Password</p>
                                            <input type="password" name="password" placeholder="Password" class="form-control" id="password" required>
                                            <div class="invalid-feedback">Please enter your password!</div>
                                        </div>
                                        <div class="col-12">
                                            <label style="color:red">@ViewBag.msg</label>
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Login</button>
                                        </div>
                                    }

                                </div>
                            </div>

                        </div>

                    </div>
                </div>

            </section>

        </div>
        @Html.Partial("_Alerts")
    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/Content/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Content/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>
    <script>
        function GetRoleValue(id) {
            if (id == 1) {
                document.getElementById("1").style.display = "block";
                document.getElementById("2").style.display = "none";
                document.getElementById("5").style.display = "none";
                document.getElementById("5").style.display = "none";
            } else if (id == 2) {
                document.getElementById("1").style.display = "none";
                document.getElementById("2").style.display = "block";
                document.getElementById("5").style.display = "none";
                document.getElementById("6").style.display = "none";
            }
            else if (id == 5) {
                document.getElementById("1").style.display = "none";
                document.getElementById("2").style.display = "none";
                document.getElementById("5").style.display = "block";
                document.getElementById("6").style.display = "none";
            } else if (id == 6) {
                document.getElementById("1").style.display = "none";
                document.getElementById("2").style.display = "none";
                document.getElementById("5").style.display = "none";
                document.getElementById("6").style.display = "block";
            } else {
                document.getElementById("1").style.display = "none";
                document.getElementById("2").style.display = "none";
                document.getElementById("5").style.display = "none";
                document.getElementById("6").style.display = "none";
            }
        }
    </script>

</body>

</html>
