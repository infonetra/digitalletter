@model IEnumerable<letterhead.Models.latterrvm>
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Masters</li>
            <li class="breadcrumb-item active">Reports</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">                   
                    <form class="row g-3 mt-2">
                        <div class="col-md-3">
                            <label for="validationDefault04" class="form-label">Department</label>
                            @if (Session["userrole"].ToString() == "1")
                            {
                                @Html.DropDownList("Department", ViewBag.sitedata as List<SelectListItem>, "Select", new { @class = "form-control select2" })
                            }
                            else
                            {
                                @Html.DropDownList("Department", ViewBag.sitedata as List<SelectListItem>, new { @class = "form-control select2" })
                            }
                        </div>
                        <div class="col-md-3">
                            <label for="validationDefault04" class="form-label">Site</label>
                            @if (Session["userrole"].ToString() == "1")
                            {
                                @Html.DropDownList("Site", ViewBag.dept as List<SelectListItem>, "Select", new { @class = "form-control select2" })
                            }
                            else
                            {
                                @Html.DropDownList("Site", ViewBag.dept as List<SelectListItem>, new { @class = "form-control select2" })
                            }
                        </div>
                        <div class="col-md-2">
                            <label for="validationDefault05" class="form-label">From Date</label>
                            <input type="date" id="sDate" max="9999-12-31" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label for="validationDefault06" class="form-label">To Date</label>
                            <input type="date" id="eDate" max="9999-12-31" class="form-control" />
                        </div>                       
                        <div class="col-md-2">
                            <label for="validationDefault07" class="form-label" style="color:#fff;">-</label>
                            <input type="button" onclick="filterData()" style="width:100%;" class="btn btn-success" value="Apply" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div id="ListContainer" class="fixTableHead">

            </div>           
        </div>
    </div>
</section>

@Html.Partial("_Alerts")

<script>
    function filterData() {
        debugger;
        //$.loader.open('');
        var DeptID = $('#Department').val();
        var LocID = $('#Site').val();
        var Sdate = $('#sDate').val();
        var Edate = $('#eDate').val();
      
        Swal.showLoading();
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: '/Home/GetReportData/',
            data: "{DeptID:'" + DeptID + "',LocID:'" + LocID + "',sDate:'" + Sdate + "',eDate:'" + Edate + "'}",
            dataType: "html",
            async: true,
            error: function (xhr) {
                debugger;
                alert("Invalid Data");
                Swal.close();
            },
            success: function (data) {
                debugger;
                $('#ListContainer').html(data);
                //$.loader.close(true);
                Swal.close();
            }
        });
    }
</script>


