@Html.Partial("_Alerts")

<script>
    function LetterNoData() {
        debugger;
        //$.loader.open('');     
        var ltype = $('#ltype').val();
        var empcode = $('#empcode').val();
        var leterno = $('#letterno').val();

        Swal.showLoading();
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: '/Home/GetLetternoData/',
            data: "{lstype:'" + ltype + "',empcode:'" + empcode + "',letterno:'" + leterno + "'}",
            dataType: "html",
            async: true,
            error: function (xhr) {
                debugger;
                alert("Invalid Data");
                Swal.close();
            },
            success: function (data) {
                debugger;
                $('#ListContainer').html(data);
                //$.loader.close(true);
                Swal.close();
            }
        });
    }
</script>




