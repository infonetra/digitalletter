@model IEnumerable<letterhead.Models.USERSIGN>
@{
    ViewBag.Title = "SignList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item active">Signature List</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-12">
            <div class="card recent-sales overflow-auto">
                <div class="filter" style="right:23px;">
                    @*<button type="button" class="btn btn-primary"><i class="bi bi-star me-1"></i> With Text</button>*@
                    <a class="btn btn-primary" href="@Url.Action("UploadSign", "Home")"><i class="bi bi-person-plus"></i>Create Signature</a>
                    <a class="btn btn-danger" href="@Url.Action("Dashboard","Home")">Cancel</a>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Signature Create</h5>

                    <table class="table table-borderless datatable" id="example">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">Title</th>
                                <th scope="col">Signature</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i = i + 1;
                                <tr>
                                    <th scope="row"><a href="#">@i</a></th>
                                    <td>@item.SIGNTITLE</td>
                                    <td><img src="@item.SIGNIMAGE" style="height:50px;width:50px;" /></td>
                                    <td><a href="@Url.Action("SignDeactive", "Home", new {id=item.ID})"><i class="bi bi-trash"></i></a></td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</section>


@Html.Partial("_Alerts")

