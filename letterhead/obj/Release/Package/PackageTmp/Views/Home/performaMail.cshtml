@model letterhead.Models.latterrvm
@{
    Layout = null;
    var datet = DateTime.Now.ToString("dd-MM-yyyy");
}
<!DOCTYPE html>
<html>

<head>
    <link href="~/Content/printpdf.css" rel="stylesheet" />
</head>

<body>
    <style>
        .textupercase {
            text-transform: uppercase;
        }

        body {
            font-family: Verdana, sans-serif;
            font-size: 12px;
          @*font-family:@Session["fname"].ToString();
          font-size:@Session["fsize"].ToString();*@
        }
    </style>
    <div class="maindiv">
        <div class="page-header">
            <img src="~/Content/assets/img/LeaterHeader.png" style="margin-left:7px; margin-top:6px;" />
        </div>
        @*<div class="page-headernew">
            <p style="display: flex; font-weight: bold; justify-content: space-between; padding: 0 48px; "><b class="textupercase">@Model.LATTERNOSerice</b><span>@datet</span></p>
        </div>*@
        <div class="page-headernew">
            <p style="display: flex; font-weight: bold; justify-content: space-between; padding: 0 48px; "><b class="textupercase">@Model.LATTERNOSerice</b><span>@datet</span></p>
        </div>
        <div class="tspace">
            <table>
                <thead>
                    <tr>
                        <td>
                            <!--place holder for the fixed-position header-->
                            <div class="page-header-space"></div>
                        </td>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>
                            <!--*** CONTENT GOES HERE ***-->
                            <div class="page">
                                @Html.Raw(Model.LatterData)
                            </div>
                        </td>
                    </tr>
                </tbody>

                <tfoot>
                    <tr>
                        <td>
                            <!--place holder for the fixed-position footer-->
                            <div class="page-footer-space"></div>
                        </td>
                    </tr>
                </tfoot>

            </table>
        </div>
        <div class="page-footer">
            <div>
                <img src="~/Content/assets/img/LetterFooter.png" style="margin-left:7px;margin-top:5px;" />
            </div>
        </div>
    </div>
    <script>

        window.print();
        window.onafterprint = function (event) {
            var url = '@Url.Action("Login", "Account", new { id = Model.ID })';
           window.location.href = url;
        };
    </script>
</body>

</html>

